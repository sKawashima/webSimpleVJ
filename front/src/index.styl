html, body
  margin 0
  padding 0

h1, h2
  margin 0
  padding 0 1em
  width 100vw
  text-align center

#app
  margin 0
  padding 0
  position relative
  width 100vw
  height 100vh
  #background
    margin 0
    padding 0
    position absolute
    width 100%
    height 100%
    z-index 0
    opacity 1
    transition 5s
    canvas
      filter grayscale(100%)
      transition 5s
  #display
    padding 0
    position absolute
    width 100%
    height 25vh
    z-index 10
    background-color rgba(0, 0, 0, .5)
    transition 5s
    opacity 1
  .text-center
    margin auto 0
    top 0
    bottom 0
    display flex
    justify-content center
    align-items center
    flex-direction column
  h1, h2
    color #fff
  h1
    font-size 6vw
    padding-top .1em
  h2
    font-size 3vw
    padding-bottom .5em
